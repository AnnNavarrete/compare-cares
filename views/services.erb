<form action="/services" method="post" >
  <div class="services">
    <div>
      <label for="name">Name of Aged Care</label>
      <input type="text" name="name" value="" />
    </div>
    <div>
      <label for="location">Location</label>
      <input type="text" name="location" value="" />
    </div>
    <div>
      <label for="number">Monthly Cost</label>
      <input type="number" name="cost" value="number" />
    </div>

    <legend>Select Your Aged Care Services</legend>
    <% @services.each do |service| %>
      <div>
        <input type="checkbox" name="service-<%= service.name %>" value="<%= service.id %>" />
        <label for="<%= service.name %>"><%= service.name %></label>
      </div>
    <% end %>
    <button type="submit">Submit</button>
  </div>
</form>