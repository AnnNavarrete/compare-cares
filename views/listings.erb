<div class="container">
  <div class="ui-listings-container">
    <div class="btn">
    <p>Location: <%= @location %></p>
    <form action="/compare" method="post">
      <input type="hidden" name="ids_selected" value="" class="agecare-ids">
      <button class="compare-btn">COMPARE</button>
    
    </form>
    
    </div>

    <div class="listings">

    <%  @agecares.each do |agecare|%>
      <div class="agecare" data-id="<%= agecare.id %>">
        <img src="images/download.jpeg" alt="">
        <p class="agecare-name"><%= agecare.name %></p>
        <div class="agecare-info">
          <p class="agecare-rating"> Ratings: <span> <%= agecare.rating %></span>/10</p>
          <p class="agecare-cost">Cost: $ <span><%= agecare.cost %></span></p>
        </div>
      </div>
    <% end %>
      
    </div> 

 </div>
</div>

